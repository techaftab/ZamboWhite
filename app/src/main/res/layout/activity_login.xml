<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollview_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/question"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_20sdp"
                    android:src="@drawable/ic_security"
                    android:layout_alignParentRight="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_below="@+id/question"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/sriparas_logo" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@+id/logo"
                    android:layout_margin="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_12sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/login_signin"
                            android:textColor="@color/text_purple"
                            android:textSize="@dimen/_18ssp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/lay_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@+id/txt_login"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/box_background"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/_8sdp"
                                android:src="@drawable/call_white" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/ed_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:background="@color/transparent"
                                android:hint="@string/edit_login"
                                android:singleLine="true"
                                android:inputType="number"
                                android:textSize="@dimen/_12ssp"
                                android:lines="1"
                                android:digits=".0123456789"
                                android:imeOptions="actionNext"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/lay_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@+id/lay_email"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/box_background"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/_8sdp"
                                android:src="@drawable/lock_filled_white" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:hint="@string/password"
                                android:textColorHint="@android:color/white"
                                app:hintEnabled="false"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@android:color/white">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/ed_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@android:color/transparent"
                                    android:hint="@string/password"
                                    android:paddingLeft="@dimen/_8sdp"
                                    android:textSize="@dimen/_12ssp"
                                    android:imeOptions="actionDone"
                                    android:lines="1"
                                    android:paddingRight="@dimen/_8sdp"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="@android:color/white" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/login_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@id/lay_password"
                            android:layout_margin="@dimen/_15sdp"
                            android:background="@drawable/rounded_button_orange"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18ssp"/>

                        <ProgressBar
                            android:id="@+id/login_progressBar"
                            android:visibility="gone"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@color/gray"
                            android:padding="@dimen/_8sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/login_button"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/remember_me"
                                android:layout_width="match_parent"
                                android:layout_weight="0.50"
                                android:padding="@dimen/_5sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="start|center"
                                android:text="@string/remember_me"
                                android:textColor="@color/text_purple" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/forget_password"
                                android:layout_width="match_parent"
                                android:layout_weight="0.50"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/fgt_pwd"
                                android:textColor="@color/text_purple"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_margin="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_12sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_forgot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/fgt_pwd"
                                android:textColor="@color/text_purple"
                                android:textSize="@dimen/_18ssp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/lay_mobile_forgot"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@+id/txt_forgot"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/box_background"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:src="@drawable/call_white" />

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/ed_phone_forgot"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/transparent"
                                    android:hint="@string/edit_login"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:textSize="@dimen/_12ssp"
                                    android:lines="1"
                                    android:digits=".0123456789"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="@dimen/_8sdp"
                                    android:paddingRight="@dimen/_8sdp"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/lay_otp_forgot"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:visibility="gone"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@drawable/box_background"
                                android:orientation="horizontal"
                                android:padding="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/_8sdp"
                                    android:src="@drawable/lock_filled_white" />

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/ed_otp_forgot"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/transparent"
                                    android:hint="@string/enter_otp"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:textSize="@dimen/_12ssp"
                                    android:lines="1"
                                    android:digits=".0123456789"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="@dimen/_8sdp"
                                    android:paddingRight="@dimen/_8sdp"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/forgot_button"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_15sdp"
                                android:background="@drawable/rounded_button_orange"
                                android:text="@string/verify"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18ssp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_resend_forgot"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="0.50"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="start|center_vertical"
                                    android:padding="@dimen/_8sdp"
                                    android:text="@string/resend_otp"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/_14ssp"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/login_user"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="0.50"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="end|center_vertical"
                                    android:padding="@dimen/_8sdp"
                                    android:text="@string/go_back"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/_14ssp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/forgot_progressBar"
                            android:visibility="invisible"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:background="@color/gray"
                            android:padding="@dimen/_8sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_horizontal" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/ln_signup_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/rl_back"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/do_have_referral"
                        android:textSize="@dimen/_15ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/sign_up"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15ssp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/framelayout_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"/>

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/acc_ic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/nav_user_icon"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_8sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_toEndOf="@+id/acc_ic"
                android:text=""
                android:textStyle="normal"
                android:textColor="@color/white"
                android:layout_toStartOf="@+id/img_fwd"
                android:textSize="@dimen/_14ssp"
                android:layout_toRightOf="@+id/acc_ic"
                android:layout_toLeftOf="@+id/img_fwd" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_fwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_forward_white_24dp"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/open_wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_back"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/wallet_ic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/wallet"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/wallet_ic"
                android:layout_toStartOf="@+id/img_w"
                android:text="@string/transaction"
                android:onClick="onClick"
                android:id="@+id/wallet_text"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/wallet_ic"
                android:layout_toLeftOf="@+id/img_w" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_w"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/arrow_forward_black"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/refer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_back"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/info_refer"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/refer"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toRightOf="@id/info_refer"
                android:layout_toLeftOf="@+id/img_refer"
                android:text="@string/share"
                android:id="@+id/refer_text"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toStartOf="@+id/img_refer"
                android:layout_toEndOf="@id/info_refer" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_refer"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/arrow_forward_black"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_back"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/info_ic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/info"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/info_ic"
                android:layout_toStartOf="@+id/img_ic"
                android:text="@string/about"
                android:id="@+id/about_text"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/info_ic"
                android:layout_toLeftOf="@+id/img_ic" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_ic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/arrow_forward_black"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/rl_back"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/support_ic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/support"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_toEndOf="@+id/support_ic"
                android:layout_toStartOf="@+id/img_s"
                android:text="@string/support"
                android:id="@+id/support_text"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_toRightOf="@+id/support_ic"
                android:layout_toLeftOf="@+id/img_s" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_s"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_black"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:background="@drawable/rl_back"
            android:paddingRight="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/_change_pass_ic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/change_password" />

            <TextView
                android:id="@+id/change_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/img_c"
                android:layout_toEndOf="@+id/_change_pass_ic"
                android:paddingLeft="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_8sdp"
                android:text="@string/chng_pwd"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="0dp"
                android:layout_toLeftOf="@+id/img_c"
                android:layout_toRightOf="@+id/_change_pass_ic" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_c"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_8sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_black"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_back"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/_logout_ic"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/logout"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/_logout_ic"
                android:text="@string/logout"
                android:onClick="onClick"
                android:id="@+id/logout_text"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/_logout_ic" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_8sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_forward_black"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
